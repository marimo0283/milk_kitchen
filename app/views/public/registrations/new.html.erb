<div class="container">
  <div class="row justify-content-center align-items-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="text-center py-2">
    <%= render "public/shared/error_messages", resource: resource %>
      <h3 class="py-2 mt-1">新規登録</h3>
      <table align="center">
        <tr>
          <td>名前</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>パスワード(6文字以上)</td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </tr>
      </table>
  <div class="actions my-3">
    <%= f.submit "新規登録", class: "btn btn-outline-info" %>
  </div>
<% end %>
<span>会員登録がお済みの方は<%= render "public/shared/links" %></span>
</div>


  </div>
</div>
