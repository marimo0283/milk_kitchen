<div class="container mt-3 add-font">
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="d-flex item-index-h">
        <h2 class="my-2">みんなのレシピ一覧</h2>
      </div>
      <% @recipes.each do |recipe| %>
      <div class="card col-4">
        <div class="card-img-top">
          <%= image_tag recipe.recipe_image, size:"300x300" %>
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= recipe.name %></h4>
          <p class="card-text"><%= recipe.introduction %></p>
          <%= link_to "作り方を見る", recipe_path(recipe) %>
        </div>
      </div>
    <% end %>
    </div>
    <div class="col">
      <%= render "/public/recipes/category_search", categories: @categories %>
    </div>
  </div>
</div>