<div class="container mt-3 add-font">
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="d-flex item-index-h">
        <h2 class="my-2">お気に入り一覧</h2>
      </div>
    <% if @favorite_list.present? %>
      <% @favorite_list.each do |favorite| %>
      <div class="card col-4">
        <div class="card-img-top">
          <%= image_tag favorite.recipe_image, size:"300x300" %>
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= favorite.name %></h4>
          <p class="card-text"><%= favorite.introduction %></p>
          <%= link_to "作り方を見る", recipe_path(favorite.id) %>
        </div>
      </div>
      <% end %>
    <% end %>
    </div>
  </div>
</div>