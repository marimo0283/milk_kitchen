<div class="container">
    <div class="row">
      <div class="col-xs-7 ">
        <div class="recipe-image">
          <%= image_tag @recipe.recipe_image, format: 'jpeg', size: "400x300" %>
        </div>
      </div>
      <div class="col">
        <% if user_signed_in? %>
          <% if current_user.id != @recipe.user.id %>
          <% else %>
            <div class="recipe-btn">
              <%= link_to "レシピ編集", edit_recipe_path(@recipe.id), id:"recipe-edit", class: "btn btn-warning" %>
              <%= link_to "レシピ削除", recipe_path(@recipe.id), method:  :delete, data: {confirm: "本当に削除しますか？"}, class:  "btn btn-danger" %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="col">
        <h4><%= @recipe.name %></h4>
        <span><%= @recipe.introduction %></span>
      </div>
    </div>
    <section class="cooking_content">
      <ul class="accordion">
        <li>
          <h5>
            <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
              作り方を見る
          </h5>
          <div class="content">
            <div class="row">
              <div class="col-lg-5 col-xs-12">
                <div class="ingredient_list">
                  <h5 class="item-title">
                    材料(<%= @recipe.serving %>人分)
                  </h5>
                  <div class="ingredient_table">
                    <table class="table table-inverse">
                      <tbody>
                        <% @ingredients.each do |ingredient| %>
                          <tr>
                            <td>
                              <%= ingredient.ingredient_name %>
                            </td>
                            <td>
                              <%= ingredient.amount %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="col-lg-7  col-xs-12">
                <div class="step_list">
                  <ol>
                    <li>
                      <h5>作り方</h5>
                      <% @steps.each do |step| %>
                        <p>
                          <%= step.step_introduction %>
                        </p>
                      <% end %>
                    </li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </seciton>
    </div>
  </div>