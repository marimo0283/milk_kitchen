<div class="container mt-3 add-font">
  <div class="row">
    <div class="col-10 mx-auto">
      <h4>お気に入り一覧</h4>
    <div class="d-flex align-content-start flex-wrap img-container img">
     <% @recipes.each do |recipe| %>
      <div class="col-auto">
       <%= image_tag recipe.recipe_image.variant(resize: "300x300", gravity: "center", crop: "300x300+0+0") %>
       <h4><%= recipe.name %></h4>
       <p><%= recipe.introduction %></p>
       <%= link_to "作り方を見る", recipe_path(recipe) %>
       <div class="pb-lg-4" ></div>
      </div>
     <% end %>
    </div>
    <div class="pb-lg-1"></div>
   </div>
  </div>
</div>