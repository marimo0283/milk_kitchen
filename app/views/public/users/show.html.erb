<div class="container">
  <div class="row">
    <div class="col-md-3 py-4">
      <span class="d-flex justify-content-center"><%= image_tag @user.get_profile_image(200,200) %></span>
      <table class="table">
        <tbody>
            <tr>
              <th class="d-flex justify-content-center"><%= @user.name %></th>
            </tr>
            <tr>
              <th class="d-flex justify-content-center"><%= @user.introduction %></th>
            </tr>
            <tr>
              <th>フォロー</th>
              <th>
                <%= link_to user_followings_path(@user.id) do %>
                  <%= @user.followings.count %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>フォロワー</th>
              <th>
                <%= link_to user_followers_path(@user.id) do %>
                  <%= @user.followers.count %>
                <% end %>
              </th>
            </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-info btn-block my-2" do %>
            <i class="fas fa-user-cog"></i>
            <span>プロフィール編集</span>
          <% end %>
        <% else %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, remote: true, class: "btn btn-outline-info btn-block my-2" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, remote: true, class: "btn btn-outline-info btn-block my-2" %>
          <% end %>
        <% end %>
      </div>
      <div class="row">
        <%= link_to new_recipe_path, class: "btn btn-outline-info btn-block mb-2" do %>
          <i class="fas fa-utensils"></i>
          <span>レシピを投稿する</span>
        <% end %>
      </div>
      <div class="row">
        <%= link_to favorite_recipes_path, class: "btn btn-outline-info btn-block mb-2" do %>
          <i class="fas fa-heart"></i>
          <span>お気に入り</span>
        <% end %>
      </div>
      <div class="row">
        <% if @user == current_user %>
          <%= link_to user_path(current_user.id), method: :delete, data: {confirm: "本当に退会しますか？"}, class: "btn btn-outline-info btn-block" do %>
            <i class="fas fa-user-slash"></i>
            <span>退会</span>
          <% end %>
        <% end %>
      </div>

    </div>
    <div class="col-md-7 py-4 mx-4">
      <h4 class="d-flex justify-content-center"> 投稿したレシピ</h4>
      <% @recipes.each do |recipe| %>
      <div class="col-auto">
        <table>
          <tr>
            <td rowspan="2">
              <%= link_to recipe_path(recipe) do %>
                <%= image_tag recipe.recipe_image, size:"300x300" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <%= link_to recipe_path(recipe) do %>
                <%= recipe.name %>
              <% end %>
              </br><%= recipe.introduction %>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
    </div>
  </div>
</div>