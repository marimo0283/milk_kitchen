<div class="container">
  <div class="row justify-content-center align-items-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="text-center py-2">
      <h3 class="mt-1">ログイン</h3>

      <div class="field py-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "メールアドレス"%>
      </div>

      <div class="field py-1">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-2">
        <%= f.submit "ログイン", class: "btn btn-outline-info" %>
      </div>
      <% end %>
      <span>会員登録がお済みではない方は<%= render "public/shared/links" %></span>

      <div class="actions mt-4">
        <%= link_to "ゲストとしてログイン", users_guest_sign_in_path, method: :post, class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
</div>

