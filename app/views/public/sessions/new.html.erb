<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-outline-info" %>
  </div>
<% end %>
<span>会員登録がお済みではない方は<%= render "public/shared/links" %></span>

  <div class="actions">
    <%= link_to "ゲストとしてログイン", users_guest_sign_in_path, method: :post, class: "btn btn-outline-info" %>
  </div>
