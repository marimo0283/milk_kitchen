<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 my-3">
    <h2 class="my-3">レシピ一覧</h2>
      <% @recipes.each do |recipe| %>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td><%= image_tag recipe.recipe_image.variant(resize: "150x150^", gravity: "center", crop: "200x200+0+0") %></td>
              <td><%= recipe.name %></td>
              <td>
                <%= link_to "削除", admin_recipe_path(recipe.id), method:  :delete, data: {confirm: "本当に削除しますか？"}, class:  "btn btn-danger" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>