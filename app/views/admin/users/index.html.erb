<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 my-3">
    <h2 class="my-3">ユーザー一覧</h2>
      <% @users.each do |user| %>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>
              <td><%= user.name %></td>
              <td>
                <%= link_to "退会", admin_user_path(user.id), method: :delete, data: {confirm: "本当に退会させますか？"}, class: "btn btn-outline-info btn-block" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
